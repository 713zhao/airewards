rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tasks collection - users can manage tasks in their family
    match /tasks/{taskId} {
      allow read, write: if request.auth != null 
        && (
          // User can access tasks assigned to them
          resource.data.assignedToUserId == request.auth.uid
          // Or tasks in their family (using userId as familyId for now)
          || resource.data.familyId == request.auth.uid
        );
      
      // Allow creating new tasks
      allow create: if request.auth != null
        && (
          // User can create tasks for themselves
          request.resource.data.assignedToUserId == request.auth.uid
          // Or tasks in their family
          || request.resource.data.familyId == request.auth.uid
        );
    }
    
    // Families collection - users can read/write their own family data
    match /families/{familyId} {
      allow read, write: if request.auth != null 
        && (
          // Family owner
          resource.data.ownerId == request.auth.uid
          // Or family member
          || request.auth.uid in resource.data.memberIds
        );
    }
    
    // Rewards collection - users can read rewards, family owners can write
    match /rewards/{rewardId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
        && resource.data.familyId == request.auth.uid;
    }
    
    // Transactions collection - users can read/write their own transactions
    match /transactions/{transactionId} {
      allow read, write: if request.auth != null 
        && (
          resource.data.userId == request.auth.uid
          || resource.data.familyId == request.auth.uid
        );
    }
    
    // Allow test collection for debugging (remove in production)
    match /test/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Default deny all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}